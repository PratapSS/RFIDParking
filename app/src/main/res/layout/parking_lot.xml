<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="30dip"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark"

        android:id="@+id/firstLane"
        >


        <Button
            android:id="@+id/pspot1"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="1"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />
        <Button
            android:id="@+id/pspot2"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="2"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />

        <Button
            android:id="@+id/pspot3"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="3"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />
        <Button
            android:id="@+id/pspot4"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="4"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="30dp"
        android:id="@+id/secondLane"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark"


        >


        <Button
            android:id="@+id/pspot5"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="5"
            android:textOff="@string/parkoff"
            android:textOn="@string/parkon"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />
        <Button
            android:id="@+id/pspot6"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="6"
            android:textOff="@string/parkoff"
            android:textOn="@string/parkon"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />

        <Button
            android:id="@+id/pspot7"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="7"
            android:textOff="@string/parkoff"
            android:textOn="@string/parkon"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            android:textSize="30dp"
            android:gravity="center"

            />
        <Button
            android:id="@+id/pspot8"
            android:layout_width="@dimen/pspot_widht"
            android:layout_height="@dimen/pspot_height"
            android:text="8"
            android:textSize="30dp"
            android:gravity="center"
            android:textOff="@string/parkoff"
            android:textOn="@string/parkon"
            android:background="@drawable/button_selector"
            android:layout_marginBottom="@dimen/border_width"
            />

    </LinearLayout>
</RelativeLayout>